<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane fx:id="main" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="300.0" minWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox alignment="CENTER" prefWidth="200.0" spacing="16.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="48.0" fitWidth="48.0" onMouseClicked="#goToAddView" pickOnBounds="true" preserveRatio="true" smooth="true" styleClass="pointer">
               <image>
                  <Image url="@../images/add.png" />
               </image>
            </ImageView>
            <TextField fx:id="search" promptText="Search your watchlist" styleClass="large" HBox.hgrow="ALWAYS" />
            <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true" smooth="true" styleClass="pointer">
               <image>
                  <Image url="@../images/search.png" />
               </image>
            </ImageView>
         </children>
         <padding>
            <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <ScrollPane fx:id="scrollContent" fitToWidth="true" hbarPolicy="NEVER" styleClass="background" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
