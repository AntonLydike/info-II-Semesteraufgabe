<VBox fx:id="card_root" maxWidth="180.0" prefWidth="180.0" styleClass="movie-card" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane>
         <children>
            <ImageView fitHeight="248.0" fitWidth="178.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/loader.dark.gif" />
               </image>
            </ImageView>
            <ImageView fx:id="cover" fitWidth="180.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </StackPane>
      <FlowPane maxWidth="180.0" prefWidth="180.0" prefWrapLength="160.0" VBox.vgrow="NEVER">
         <children>
            <Label fx:id="title" maxWidth="164.0" prefWidth="164.0" text="Rogue One: A StarWars Story" wrapText="true" />
            <Label fx:id="year" maxWidth="144.0" styleClass="grey" text="(2017)" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </FlowPane>
      <FlowPane alignment="BOTTOM_LEFT" maxWidth="180.0" prefWidth="180.0" styleClass="smaller" VBox.vgrow="ALWAYS">
         <children>
            <Label styleClass="grey" text="By: " wrapText="true" />
            <Label fx:id="director" maxWidth="164.0" styleClass="link" text="Taika Waititi" wrapText="true" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" />
         </padding>
      </FlowPane>
      <HBox fx:id="rating" alignment="BOTTOM_CENTER" maxWidth="180.0" prefHeight="24.0" prefWidth="180.0" spacing="10.0" VBox.vgrow="NEVER">
         <children>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/star.png" />
               </image></ImageView>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/star.png" />
